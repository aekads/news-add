<script>

function truncateText(text, maxLength) {
  if (!text) return '';
  return text.length > maxLength ? text.substring(0, maxLength) + '...' : text;
}

    async function loadGrids() {
      try {
        // Load LEFT GRID
        const leftRes = await fetch('https://cms.aekads.com/news/world/left');
        const leftData = await leftRes.json();
  
        const leftGrid1 = document.getElementById('leftGrid1');
        const leftGrid2 = document.getElementById('leftGrid2');
        leftGrid1.innerHTML = '';
        leftGrid2.innerHTML = '';
  
        populateGrid2(leftGrid1, leftData.part1, 'grid-item', 'grid-box', 'grid-image', 'grid-caption');
        populateGrid2(leftGrid2, leftData.part2, 'grid-item', 'grid-box', 'grid-image', 'grid-caption');
  
        // Load RIGHT GRID
        const rightRes = await fetch('https://cms.aekads.com/news/world/right');
        const rightData = await rightRes.json();
  
        const rightGrid1 = document.getElementById('rightGridPart1');
        const rightGrid2 = document.getElementById('rightGridPart2');
        rightGrid1.innerHTML = '';
        rightGrid2.innerHTML = '';
  
        populateGrid(rightGrid1, rightData.part1, 'grid-itemx', 'grid-boxx', 'grid-image', 'grid-captionx');
        populateGrid(rightGrid2, rightData.part2, 'grid-itemx', 'grid-boxx', 'grid-image', 'grid-captionx');
  
      } catch (err) {
        console.error('Fetch error:', err);
      }
    }
  
    function populateGrid(container, items, itemClass, boxClass, imgClass, captionClass) {
      items.forEach(item => {
        const gridItem = document.createElement('div');
        gridItem.className = itemClass;
        gridItem.innerHTML = `
           <p class="${captionClass}">${truncateText(item.image_title, 50)}</p>
          <div class="${boxClass}">
            <img src="${item.image_url}" alt="News Image" class="${imgClass}">
          </div>
       
        `;
        container.appendChild(gridItem);
      });


    }
 


    function populateGrid2(container, items, itemClass, boxClass, imgClass, captionClass) {
  items.forEach(item => {
    const gridItem = document.createElement('div');
    gridItem.className = itemClass;
    gridItem.innerHTML = `
      <div class="${boxClass}">
        <img src="${item.image_url}" alt="News Image" class="${imgClass}">
      </div>
      <p class="${captionClass}">${truncateText(item.image_title, 50)}</p>
    `;
    container.appendChild(gridItem);
  });
}
  
  
    // Load all grids once DOM is ready
    window.addEventListener('DOMContentLoaded', loadGrids);
  </script>
