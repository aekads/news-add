    <title>AEK News Layout</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html,
        body {
            overflow-x: hidden;
        }


        body {
            font-family: Arial, sans-serif;
            background: #e0e0e0;
        }

        .container {
            max-width: 1424px;
            margin: auto;
            padding: 30px;
            /* background: #f0f0f0; */
        }

        /* Header */
        .header {
            background: white;
            margin-bottom: 20px;
            height: 160px;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
        }

        .header-top {
            text-align: center;
            padding: 10px 0;
            /* border-bottom: 1px solid #ccc; */
        }

        .logo {
            font-size: 28px;
            font-weight: bold;
            color: #004aad;
        }

        .logo span {
            color: rgb(80, 79, 79);
        }

        .header-bottom {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 25px;
            padding: 10px 0;
        }

        .header-bottom a {
            text-decoration: none;
            color: #333;
            font-weight: 500;
            
        }

        .header-bottom a:hover {
            color: #2098F4;
        }

        /* Top white boxes */
        .top-boxes {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }

        .top-boxes .box {
            flex: 1;
            width: 250px;
            height: 95px;
            background: white;
            border: 1px solid #ddd;
        }

        /* Main Content */
        .main-content {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
        }

        .left-grid {
            flex: 3;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 5px;
            min-width: 300px;
        }

        .right-grid {
            flex: 1;
            display: grid;
            gap: 10px;
            min-width: 200px;
        }

        .grid-box {
            height: 218px;
            width: 356px;
            background: white;
            padding: 10px;
            border: 1px solid #ddd;
            font-size: 14px;
        }

        .grid-boxx {
            height: 110px;
            width: 122px;
            background: white;
            padding: 10px;
            border: 1px solid #ddd;
            font-size: 14px;
        }

        /* Footer */
        .footer {
            font-size: 32px;
            height: 218px;
            /* width: 1322px; */
            background: #111;
            color: white;
            /* text-align: center; */
            padding: 20px;
            margin-top: 30px;
            margin-bottom: 30px;
            font-weight: bold;

            display: flex;
            justify-content: center;
            align-items: center;

        }

        /* Responsive */
        @media (max-width: 992px) {
            .left-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 600px) {
            .left-grid {
                grid-template-columns: 1fr;
            }

            .header-bottom {
                flex-direction: column;
                align-items: center;
                justify-content: left;
                gap: 10px;
            }
        }

        .grid-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            height: 100;
        }

        .grid-caption {
            margin-top: 5px;
            font-size: 24px;
            text-align: center;
            
        }


        .Cricket-score {
            font-size: 18px;
            margin-bottom: 20px;
            text-align: center
        }

        .World-News {
            margin-bottom: 30px;
            font-size: 24px;
        }

        .nav-link{
            font-size: 16px;
        }

        .grid-itemx {
            display: flex;
            align-items: center;
            gap: 10px;
            /* space between text and box */
            margin-bottom: 10px;
            margin-left: 100px;
        }

        @media (max-width: 768px) {
            .grid-itemx {
                margin-left: 0px;
            }
        }


        .grid-captionx {
            font-size: 16px;
            width: 100px;
            /* you can adjust this */
        }

        .section-header {
            display: flex;
            font-size: 16px;
            justify-content: flex-end;
            align-items: center;
            /* gap: 10px; */
            margin-bottom: 10px;
        }

        .section-header .line {
            flex: 1;
            height: 1px;
            background-color: #999;
            /* margin: 0 10px; */
            max-width: 50px;
            /* Controls line length */
        }

        .view-more {
            padding: 4px;
        }


        .menu-toggle {
            display: none;
            font-size: 28px;
            cursor: pointer;
            padding: 10px;
        }

        @media (max-width: 768px) {
            .menu-toggle {
                display: block;
            }

            .header-bottom {
                display: none;
                flex-direction: column;
                align-items: center;
                background: white;
                padding: 10px;
                box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
            }

            .header-bottom.show {
                display: flex;
            }

            .header-bottom a {
                padding: 8px 0;
                width: 100%;
                text-align: center;
                /* border-bottom: 1px solid #ddd; */
            }
        }


        /* Mobile: 320px */
        @media (max-width: 320px) {
            .left-grid {
                grid-template-columns: 1fr;
                place-items: center;
            }

            .grid-box {
                width: 100%;
            }

            .grid-item {
                margin-right: 40px;
            }
        }

        /* Mobile: 375px */
        @media (max-width: 375px) {
            .left-grid {
                grid-template-columns: 1fr;
                place-items: center;
            }

            .grid-box {
                width: 100%;
            }
        }

        /* Tablet: 768px - 991px */
        @media (min-width: 768px) and (max-width: 1024px) {
            .main-content {
                flex-direction: column;
                align-items: center;
            }

            .left-grid {
                grid-template-columns: repeat(2, 1fr);
                place-items: center;
            }

            .right-grid {
                display: grid;
                grid-template-columns: repeat(2, 1fr);
                place-items: center;
                margin-top: 20px;
            }

            .grid-itemx {
                margin-left: 0;
            }

            .section-header.right-grid-heading {
                grid-column: span 2;
                justify-content: center;
                margin-bottom: 15px;
            }
        }

        @media (width: 1024px) {
            .grid-box {
                width: 450px !important;
            }
            .header-bottom {
                gap: 10px;
            }
        }

        @media (width: 320px) {
            .img {
                width: 260px !important;
            }
        }


       
 
